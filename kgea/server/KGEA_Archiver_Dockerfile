FROM python:3.8

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

RUN apt-get update && apt-get upgrade -y && apt-get install -y build-essential git python3-lxml
RUN python -m pip install --upgrade pip && python -m pip install wheel

# Copy over requirements and defined dependencies independent of the rest of the
# code base, so that they are not repeatedly installed when the code changes
COPY archiver_requirements.txt  /usr/src/app/requirements.txt
RUN python -m pip install --no-cache-dir -r requirements.txt

# We selectively copy the project into the image
# so as not to bloat it with unused code
COPY kgea/__init__.py ./kgea/
COPY kgea/aws/*.py ./kgea/aws/
COPY kgea/config/ ./kgea/config/
COPY kgea/server/*.py ./kgea/server/
COPY kgea/server/catalog/ ./kgea/server/catalog/
COPY kgea/server/archiver/ ./kgea/server/archiver/
COPY kgea/server/web_services/util.py ./kgea/server/web_services/
COPY kgea/server/web_services/typing_utils.py ./kgea/server/web_services/
COPY kgea/server/web_services/models/ ./kgea/server/web_services/models/

# install the latest AWS CLI inside the container
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"; \
    unzip awscliv2.zip; ./aws/install; aws --version

# Ensure that archiver script is executable
RUN chmod uga+x /usr/src/app/kgea/server/archiver/scripts/*.bash

EXPOSE 8100

ENTRYPOINT ["python"]

CMD ["-m", "kgea.server.archiver"]
