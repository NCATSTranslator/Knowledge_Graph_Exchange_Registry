FROM python:3.8

RUN mkdir -p /usr/src/app/kgea/server/archiver
WORKDIR /usr/src/app

RUN apt-get update && apt-get upgrade -y && apt-get install -y build-essential git python-lxml
RUN python -m pip install --upgrade pip && python -m pip install wheel

# Copy over requirements and defined dependencies independent of the rest of the
# code base, so that they are not repeatedly installed when the code changes
COPY archiver_requirements.txt  /usr/src/app/requirements.txt
RUN python -m pip install --no-cache-dir -r requirements.txt

COPY ./kgea/__init__.py /usr/src/app/kgea
COPY ./kgea/aws/*.py /usr/src/app/kgea/aws
COPY ./kgea/config/* /usr/src/app/kgea/config
COPY ./kgea/server/__init__.py /usr/src/app/kgea/server
COPY ./kgea/server/archiver/*.py /usr/src/app/kgea/server/archiver

EXPOSE 8100

ENTRYPOINT ["python"]

CMD ["-m", "kgea.server.archiver"]
