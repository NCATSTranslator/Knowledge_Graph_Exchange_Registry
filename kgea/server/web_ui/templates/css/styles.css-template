.textbox {
  border: 1px #DDA0DD;
}


.tooltip {
  position: relative;
  display: inline-block;
  border-bottom: 1px dotted black;
}

.tooltip .tooltiptext {
  visibility: hidden;
  width: 260px;
  background-color: #5e2ca5;
  font-family: Arial, sans-serif;
  font-weight: bold;
  font-size: smaller;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;

  /* Position the tooltip */
  position: absolute;
  z-index: 1;
  top: -5px;
  right: 125%;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
}

.tooltip_target {
  color: #5e2ca5;
  font-style: oblique;
}
