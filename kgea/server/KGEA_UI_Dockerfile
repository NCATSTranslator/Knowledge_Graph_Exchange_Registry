FROM python:3.8-alpine

# Create a location for credentials
RUN mkdir -p /root/.aws

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY server/kgea_ui_requirements.txt /usr/src/app/requirements.txt
COPY server/kgea_ui_config.yaml      /usr/src/app/server/kgea_ui_config.yaml

RUN apk update && apk upgrade && apk add --no-cache build-base git

RUN python -m pip install --upgrade pip && pip3 install wheel && pip3 install --no-cache-dir -r requirements.txt

COPY . /usr/src/app

EXPOSE 8090

ENTRYPOINT ["python3"]

CMD ["-m", "server.web_ui"]
