FROM python:3.8

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY requirements.txt  /usr/src/app/requirements.txt
COPY kgea/config/config.yaml  /usr/src/app/kgea/config/config.yaml

RUN apt-get update && apt-get upgrade -y && apt-get install -y build-essential git python-lxml
RUN python -m pip install --upgrade pip && pip install wheel
RUN pip install --no-cache-dir -r requirements.txt

COPY . /usr/src/app

EXPOSE 8090

ENTRYPOINT ["python"]

CMD ["-m", "kgea.server.web_ui"]
