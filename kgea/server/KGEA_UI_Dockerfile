FROM python:3.8-alpine

# Create a location for credentials & the application
RUN mkdir -p /root/.aws && mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY requirements.txt  /usr/src/app/requirements.txt
COPY kgea/server/config/config.yaml  /usr/src/app/kgea/server/config/config.yaml

RUN apk update && apk upgrade && apk add --no-cache build-base git g++ gcc libxslt-dev && \
    python -m pip install --upgrade pip && pip3 install wheel && \
    pip3 install --no-cache-dir -r requirements.txt

COPY . /usr/src/app

EXPOSE 8090

ENTRYPOINT ["python3"]

CMD ["-m", "kgea.server.web_ui"]
