FROM python:3.8-alpine

# Create a location for credentials
RUN mkdir -p /root/.aws

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY kgea_archive_requirements.txt /usr/src/app/requirements.txt
COPY config/config.yaml      /usr/src/app/config/config.yaml

RUN apk update && apk upgrade && apk add --no-cache build-base git

RUN python -m pip install --upgrade pip

RUN pip3 install --no-cache-dir -r requirements.txt

COPY . /usr/src/app

EXPOSE 8080

ENTRYPOINT ["python3"]

CMD ["-m", "web_services"]
