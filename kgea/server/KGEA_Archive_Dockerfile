FROM python:3.8

# Create a location for credentials & the application
RUN mkdir -p /root/.aws && mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY requirements.txt /usr/src/app/requirements.txt
COPY kgea/server/config/config.yaml  /usr/src/app/kgea/server/config/config.yaml

RUN apt-get update && apt-get upgrade && apt-get install -y build-essential git python-lxml
RUN python -m pip install --upgrade pip && pip install wheel
RUN pip install --no-cache-dir -r requirements.txt

COPY . /usr/src/app

EXPOSE 8080

ENTRYPOINT ["python"]

CMD ["-m", "kgea.server.web_services"]
