FROM python:3.8

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

RUN apt-get update && apt-get upgrade -y && apt-get install -y build-essential git python-lxml nvme
RUN python -m pip install --upgrade pip && python -m pip install wheel

# Copy over requirements and defined dependencies independent of the rest of the
# code base, so that they are not repeatedly installed when the code changes
# February 5, 2022 - partitioned requirements.txt into three files, to ease loading(?)
COPY requirements_1.txt  /usr/src/app/requirements_1.txt
RUN python -m pip install --no-cache-dir -r requirements_1.txt
COPY requirements_kgx.txt  /usr/src/app/requirements_kgx.txt
RUN python -m pip install --no-cache-dir -r requirements_kgx.txt
COPY requirements_2.txt  /usr/src/app/requirements_2.txt
RUN python -m pip install --no-cache-dir -r requirements_2.txt
COPY requirements_3.txt  /usr/src/app/requirements_3.txt
RUN python -m pip install --no-cache-dir -r requirements_3.txt

COPY . /usr/src/app

# install the latest AWS CLI inside the container
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"; \
    unzip awscliv2.zip; ./aws/install; aws --version

# Ensure that all utility scripts are executable
RUN chmod uga+x /usr/src/app/kgea/server/web_services/scripts/*.bash

EXPOSE 8080

ENTRYPOINT ["python"]

CMD ["-m", "kgea.server.web_services"]
